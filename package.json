{
  "name": "mahblog-server",
  "version": "1.0.0",
  "description": "A back-end for MahBlog",
  "main": "index.js",
  "scripts": {
    "build:prod": "npx tsc && npx prisma generate",
    "migrate:prod": "prisma migrate deploy",
    "start:prod": "node ./dist/index.js",
    "build:dev": "rimraf dist && npx tsc && npx prisma generate",
    "migrate:dev": "prisma migrate dev",
    "start:dev": "nodemon -L ./src/index.ts",
    "seed": "npx prisma db seed",
    "test": "jest --runInBand --no-cache --forceExit",
    "reset": "rimraf node_modules dist package-lock.json",
    "lint:check": "eslint ."
  },
  "keywords": [],
  "author": "Marcel Magbual",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cron-parser": "^4.9.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "inversify": "^6.0.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.14",
    "playwright": "^1.45.0",
    "redis": "^4.6.14",
    "reflect-metadata": "^0.2.2",
    "zod": "^3.23.8"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} src/seed.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/js": "^9.6.0",
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.9",
    "@types/nodemailer": "^6.4.15",
    "@types/supertest": "^6.0.2",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "globals": "^15.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "prisma": "^5.16.1",
    "rimraf": "^5.0.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.14.1"
  }
}
